.page {

  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1590602999936&di=5c7b8694189c52eef00a01711d3c878b&imgtype=0&src=http%3A%2F%2Fcdn.moji002.com%2Fimages%2Fsimgs%2F2017%2F07%2F18%2F15003561090.35938300.1750_android.jpg);
  width: 100vw;
  height: 100vh;
  /* background-color: #5a9cd8; */
