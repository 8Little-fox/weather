.top {
  top: 20rpx;
  margin-left: 50rpx;
  width: 80%;
  padding: 15rpx;
  position: relative;
  background-color: #efefef;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.top input {
  width: 80%;
  font-size: 32rpx;
}

.search1 {
  position: absolute;
  width: 10%;
  right: 0;
  bottom: 3rpx;
}
.con{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img {
  width: 400rpx;
  height: 400rpx;
}
.con >text{
  width: 40%;
  font-size: 20px;
  color: rgb(187, 181, 173);
  
}

/* body */
.body {
  color: #efefef;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.body h1 {
  font-size: 2em;
  font-weight: bold;
}

.body text {
  font-size: 1em;
}

.bottom {
  color: #efefef;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
  font-size: 1.5em;
}

.tips {
  padding: 30rpx;
  margin: 10rpx;
  color: rgb(235, 235, 17);
}